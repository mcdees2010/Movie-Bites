<div class="well">
    <%= form_for([@movie, @review]) do |f|%>
        <div class="form-group">
            <%= f.label :body %>
            <%= f.text_field :body, { :class => "form-control"} %>
        </div>
        <div class="form-group">
            <%= f.label :author %>
            <%= f.text_field :author, { :class => "form-control"}%>
        </div>
        <%= f.submit :Submit, class: "btn btn-primary" %>
    <% end %>
</div>